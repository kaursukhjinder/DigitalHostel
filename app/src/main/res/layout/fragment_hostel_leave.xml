<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper4"
    tools:context="com.auribises.MyProject.HostelLeaveFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wallpaper4">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/wallpaper4"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take Hostel Leave Permission"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="40dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:textSize="15dp" />
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/HostelName"
                android:inputType="textPersonName"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Roll No"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:id="@+id/HostelRoll"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/Reason"
                android:inputType="textPersonName"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:onClick="onClick"
                android:id="@+id/buttonLeave"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:textAlignment="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </LinearLayout>
    </ScrollView>

    </LinearLayout>
</FrameLayout>
