<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper4"
    android:orientation="vertical"
    tools:context="com.auribises.MyProject.Activity.LeaveEntryActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/wallpaper4"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Mark Hostel Leave Entry"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22dp"
                    android:layout_marginTop="30dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/txtname"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Enter Name:"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <EditText
                        android:inputType="textPersonName"
                        android:id="@+id/EditnameL"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="200dp"
                        android:layout_height="50dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/txtrollno"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Enter Rollno:"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <EditText
                        android:inputType="number"
                        android:id="@+id/EditrollnoL"
                        android:layout_width="200dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_height="50dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/txttimeL"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Time:"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18dp"/>


                    <EditText
                        android:id="@+id/EdittimeL"
                        android:inputType="time"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="250dp"
                        android:layout_height="50dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/txtdateL"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Date:"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18dp"/>
                    <EditText
                        android:id="@+id/EditdateL"
                        android:inputType="date"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="250dp"
                        android:layout_height="50dp" />
                </LinearLayout>
                <Button
                    android:id="@+id/SubmitL"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Submit"
                    android:onClick="onClick"
                    android:textSize="15dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
            </LinearLayout>
        </ScrollView>

</LinearLayout>
